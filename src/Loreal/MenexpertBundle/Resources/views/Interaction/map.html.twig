			<a href="{{ url('loreal_menexpert_interaction_purple') }}">
				<div class="circle_ani_purple">
					<img src="/images/interation/circle_purple.png" width="100%" class="circle">
					<img src="/images/interation/purple.png" width="100%" class="circle_on">
					<img src="/images/interation/taste_t.png" width="100%" class="circle_title">	
				</div>
			</a>
				{% endif %}
		</div>
		<div class="red">
				{% if (answerList.red) %}
				<div class="circle_ani_red">
					<img src="/images/interation/circle_grey.png" width="100%">
					<img src="/images/interation/red_g.png" width="100%" class="circle_on">
